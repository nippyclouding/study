<문서 객체 모델 DOM>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div id = "detail">
        <ul>
            <li>원산지 : 에티오피아</li>
            <li style="display:none">지역 : 예가체프 코레체</li>    <!--display:none으로 화면에 보여지지 않음-->
            <li style="display:none">농장 : 게뎁</li>
        </ul>
    </div>

    <script>
        let detail = document.querySelector(`#detail > ul`); // detail id 선택자 속 ul 태그 조회
        console.log(detail.innerText);  //화면에 보이는 텍스트만
        console.log(detail.innerHTML);  //전체 HTML
        console.log(detail.textContent);//숨겨진 텍스트까지 모두
    </script>
</body>
</html>



<input type="text" id="age" value = "20"> 

<script>
    let age = document.querySelector("#age").value;
    console.log(age);
    console.log(typeof(age)); // ui에서 입력받는 것들은 모두 String 타입이다. age = String으로 출력  
</script>

